---
import Layout from '../layouts/Layout.astro';
import albums from '../data/albumy.json'
---

<Layout title="Albums">
    <main>
        <h1>My Top 30 Albums of the Year</h1>
        <ol id="album-list">
	{
		albums.slice(0, 30).map(({ artist, title, id, image, listens }) => (
		    <li class="album">
			<img src={`${image ? id : "empty"}.jpg`} alt="Album Cover">
			<div class="album-info">
			        <div class="album-header">
					<h2>{title}</h2>
					<p>{artist}</p>
				</div>
			        <div class="album-footer">
					<div class="listen-count">{listens}</div>
			        </div>
			</div>
		    </li>
	))
	}
        </ol>
    </main>
</Layout>

<style>
	#album-list {
	    max-width: 1200px;
	    margin: 0 auto;
	    padding: 20px;
	    list-style: none;
	}

	h1 {
	    text-align: center;
	    color: #333;
	    margin-bottom: 40px;
	}

	.album {
	    background-color: #fff;
	    border-radius: 8px;
	    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
	    overflow: hidden;
	    width: calc(100% - 20px);
	    transition: transform 0.3s ease;
	    margin-bottom: 20px;
	    display: flex;
	}

	.album-footer {
	    display: flex;
	    justify-content: end;
	}

	.album img {
		width: 150px;
	}

	.album-info {
	    padding: 15px;
	    width: 100%;
	    display: flex;
	    flex-direction: column;
	    justify-content: space-between;
	}

	.album-info h2 {
	    font-size: 18px;
	    color: #333;
	    margin: 10px 0 5px;
	}

	.album-info p {
	    font-size: 14px;
	    color: #777;
	}

	.album:hover {
	    transform: translateX(-5px);
	}

	.listen-count {
	    font-size: 12px;
	    color: #777;
	}

	.listen-count::before {
	    content: 'ðŸŽ§';
	    margin-right: 2px;
	}

	@media (max-width: 768px) {
	    .album {
	    }
	}

	@media (max-width: 480px) {
	    .album {
		    flex-direction: column;
		    text-align: center;
	    }

	    .album-footer {
		    justify-content: center;
	    }

	    .album img {
		    width: 100%;
	    }
	}

</style>

